{
  "name": "NodeApiStarter",
  "version": "0.1.2",
  "description": "A starting point for Node.js express API with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/AymenElmehdhaoui/NodeApiStarter.git"
  },
  "author": "Aymen Elmehdhaoui",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-files",
    "serve": "node dist/server.js",
    "dev": "npm run build && npm start",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "copy-static-files": "ts-node copyStaticFiles.ts"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.0",
    "acl": "^0.4.11",
    "app-root-path": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-rate-limit": "^3.3.0",
    "glob": "^7.1.2",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "mongoose": "^5.3.9",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "nodemailer": "^4.6.7",
    "swig-email-templates": "^5.0.1",
    "validator": "^10.8.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/acl": "^0.4.35",
    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.1",
    "@types/bluebird": "^3.5.21",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express-rate-limit": "^2.9.3",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.112",
    "@types/method-override": "0.0.31",
    "@types/mongoose": "^5.3.0",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/nodemailer": "^4.6.2",
    "@types/shelljs": "^0.8.0",
    "@types/swig-email-templates": "^5.0.0",
    "@types/validator": "^9.4.1",
    "@types/winston": "^2.3.9",
    "inversify": "^5.0.1",
    "nodemon": "^1.18.2",
    "reflect-metadata": "^0.1.12",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.1.6"
  }
}
